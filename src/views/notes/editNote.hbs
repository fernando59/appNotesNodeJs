{{>navigation}}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <h1 class="text-center mb-3 mt-5">Editar una Nota</h1>
            <div class="card">
                <div class="card-body">
                    <form action="/notes/edit/{{note.id}}" method="POST">
                        <div class="mb-3">
                            <input type="text" name="title" class="form-control" placeholder="Título"
                                value="{{note.title}}" autofocus autocomplete="off" required>
                        </div>
                        <div class="mb-3">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Descripción" required>{{note.description}}</textarea>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success ">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>